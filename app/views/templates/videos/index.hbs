<div class="content-video-bg">
  <div class="container">
    <div class="row">
      
      <div class="button btn-left">
        <button class="btn" name="btn-previous">Previous</button>
      </div>

      <div class="button btn-right">
        <button class="btn" name="btn-next">Next</button>
      </div>

      <div class="col-md-12">
      
        <div class="col-md-10 col-md-offset-1">
          <div class="video-container">

            <video id="video-player" class="video-js vjs-default-skin vjs-big-play-centered center-block"
              controls preload="auto" autoplay data-setup="{}">
              <source src="{{source}}" type='video/mp4' />
            </video>

            <div class="row">
              <div class="col-md-8">
                <div id="video-subview-container"></div>
              </div>
              <div class="col-md-4">
                {{! <button type="button" class="btn pull-right endless-btn endless-disabled" name="endless-mode">Turn On Endless Mode</button> }}
                
                <div class="video-modes pull-right">
                  <button type="button" class="btn endless-btn endless-disabled" name="endless-mode">
                    <i class="fa fa-refresh fa-3x"></i>
                  </button>
                  <button type="button" class="btn dim-btn dim-disabled" name="dim-mode">
                    <i class="fa fa-lightbulb-o fa-3x"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>